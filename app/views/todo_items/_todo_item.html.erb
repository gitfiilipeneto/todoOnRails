<div class="row clearfix">
 <% if todo_item.completed? %>
  <div class="todo_item">
   <p style="opacity: 0.4;"><strike><%= todo_item.content %></strike></p>
  </div>

  <div class="complete">
   <%= link_to "Marcar como concluida", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch %>
  </div>

  <div class="trash">
   <%= link_to "Deletar essa Tarefa", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: { confirm: "Tem certeza que deseja deletar essa tarefa?" } %>
  </div>

 <% else %>
  <div class="todo_item">
   <p><%= todo_item.content %></p>
  </div>
  
  <div class="complete">
   <%= link_to "Tarefa Concluida", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch %>
  </div>

  <div class="trash">
   <%= link_to "Deletar essa Tarefa", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: { confirm: "Tem certeza que deseja deletar essa tarefa?" } %>
  </div>

 <% end %>

</div>